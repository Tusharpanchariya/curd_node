<%- include('layout/header') %>

<div class="container">
 <div class="row">
    <h3 class="text-light">Edit User (<%= user.name %> )</h3>
     <div class="col-ig-12">
       
   
    
        <form action="/update/<%= user._id %>" method="post" enctype="multipart/form-data" style="max-width: 400px; margin: auto; padding: 10px; border: 1px solid #ccc; border-radius: 5px; box-shadow: 2px 2px 12px rgba(0, 0, 0, 0.1);">
            <div style="margin-bottom: 15px;">
                <label for="name" style="display: block; margin-bottom: 5px;">Name:</label>
                <input type="text" id="name" name="name" required style="width: 100%; padding: 8px; box-sizing: border-box;" value="<%= user.name %>">
            </div>
            <div style="margin-bottom: 15px;">
                <label for="email" style="display: block; margin-bottom: 5px;">Email:</label>
                <input type="email" id="email" name="email" required style="width: 100%; padding: 8px; box-sizing: border-box;" value="<%= user.email %>">
            </div>
            <div style="margin-bottom: 15px;">
                <label for="phone" style="display: block; margin-bottom: 5px;">Phone Number:</label>
                <input type="tel" id="phone" name="phone" required style="width: 100%; padding: 8px; box-sizing: border-box;" value="<%= user.phone %>">
            </div>
            <div style="margin-bottom: 15px;">
                <label for="image" style="display: block; margin-bottom: 5px;">Select Image:</label>
                <input type="file" id="image" name="image"  required style="width: 100%; padding: 8px; box-sizing: border-box;"  value="<%= user.image %>">
                <img src="/<%= user.image %>
                "  width="100" class="img-thumbnail mt-1">
            </div>
            <input type="hidden" name="old_image" value="<%= user.image %>" />
            <div>
                <input type="submit" value="Update User" class="btn btn-success btn-1g" name="Add User"style="background-color: #4CAF50; color: white; border: none; padding: 10px 20px; cursor: pointer; border-radius: 5px;">
            </div>
        </form>
    
    
     </div>

 </div>
</div>

<%- include('layout/footer') %>